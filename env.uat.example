# UAT 環境配置文件範例
# 複製此文件為 .env.uat 並填入實際的配置值

# 服務器配置
NODE_ENV=uat
PORT=5009

# 數據庫配置（請替換為您的UAT數據庫連接字符串）
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/picklevibes-uat?retryWrites=true&w=majority

# JWT 配置
JWT_SECRET=your-uat-jwt-secret-key-change-this-in-production
JWT_EXPIRE=30d

# Stripe 配置（測試環境）
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=https://uat.picklevibes.hk/payment-result?status=success
STRIPE_CANCEL_URL=https://uat.picklevibes.hk/payment-result?status=cancel

# Twilio WhatsApp 配置（測試環境）
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_ENABLED=true

# 前端URL
CLIENT_URL=https://uat.picklevibes.hk

# CORS 配置
CORS_ORIGIN=https://uat.picklevibes.hk

# 日誌級別
LOG_LEVEL=debug

# 功能開關
ENABLE_RATE_LIMITING=true
ENABLE_MEMBERSHIP_CHECK=true
ENABLE_WHATSAPP_NOTIFICATIONS=true

# 其他配置
MAX_UPLOAD_SIZE=5mb
SESSION_SECRET=your-uat-session-secret

