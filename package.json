{
  "name": "picklevibes",
  "version": "1.0.0",
  "description": "Pickleball court booking and company website",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && PORT=3000 npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && PORT=3000 npm start",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "seed": "node server/seed.js",
    "sync-calendar": "node server/scripts/syncGoogleCalendar.js",
    "smart-sync": "node server/scripts/smartSyncGoogleCalendar.js",
    "sync-today": "node server/scripts/smartSyncGoogleCalendar.js --today",
    "sync-month": "node server/scripts/smartSyncGoogleCalendar.js --month",
    "manage-sync": "node manage-sync.js"
  },
  "keywords": [
    "pickleball",
    "booking",
    "sports",
    "website"
  ],
  "author": "Keith Leung",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "googleapis": "^128.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pug": "^3.0.3",
    "puppeteer": "^24.26.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.4",
    "stripe": "^13.5.0",
    "twilio": "^5.10.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}